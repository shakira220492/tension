<div id="informationIcon"
     style="
     position: absolute;
     opacity: 0.4;
     {#     background-color: red;#}
     right: 0px;
     top: 360px;
     width: 30px;
     height: 30px;
     transition-property: all;
     transition-duration: 0.5s;"
     onclick="displaceInformationForm(), validateInformationForm();">
    <img src="files/images/icons/information.png" alt="Mountain View" style="width:30px; height:30px; opacity: 0.9;">
</div>

<script>
    function validateInformationForm() {
        var form = $('#check-sesion-ajax');
        var url = form.attr('action');

        $.post(url, function (data)
        {
            var sessionStatus = data[0].sessionStatus;

            if (sessionStatus === "0")
            {
                console.log("6_NO se encuentra logueado");
                highlightInformationForm();
            } else
            {
                console.log("6_se encuentra logueado");
                highlightInformationForm();
            }

        }).fail(function () {
            alert('ERROR');
        });
    }

    function displaceInformationForm() {
        if (parseInt(document.getElementById('informationIcon').style.opacity) === 1)
        {
            document.getElementById('addToListIcon').style.opacity = 0.4;
            document.getElementById('donateToThisArtistIcon').style.opacity = 0.4;
            document.getElementById('logInIcon').style.opacity = 0.4;
            document.getElementById('uploadVideoIcon').style.opacity = 0.4;
            document.getElementById('marketingAndPublicityIcon').style.opacity = 0.4;
            document.getElementById('informationIcon').style.opacity = 0.4;
            document.getElementById('commentIcon').style.opacity = 0.4;
            document.getElementById('newsFeedIcon').style.opacity = 0.4;

            document.getElementById('rightFormBar').style.transitionDuration = "0.5s";
            document.getElementById('rightFormBar').style.right = "190px";
            document.getElementById('rightFormBar').style.width = "0px";
            document.getElementById('searchEngineId').style.transitionDuration = "0.5s";
            document.getElementById("searchEngineId").style.width = "190px";
            document.getElementById('presentationProduct').style.transitionDuration = "0.5s";
            document.getElementById('presentationProduct').style.right = "190px";
            document.getElementById('displaceIcon2').style.transitionDuration = "0.5s";
            document.getElementById('displaceIcon2').style.right = "160px";
        } else
        {
            document.getElementById('addToListIcon').style.opacity = 0.4;
            document.getElementById('donateToThisArtistIcon').style.opacity = 0.4;
            document.getElementById('logInIcon').style.opacity = 0.4;
            document.getElementById('uploadVideoIcon').style.opacity = 0.4;
            document.getElementById('marketingAndPublicityIcon').style.opacity = 0.4;
            document.getElementById('informationIcon').style.opacity = 1;
            document.getElementById('commentIcon').style.opacity = 0.4;
            document.getElementById('newsFeedIcon').style.opacity = 0.4;

            document.getElementById('rightFormBar').style.transitionDuration = "0.5s";
            document.getElementById('rightFormBar').style.right = "190px";
            document.getElementById('rightFormBar').style.width = "370px";
            document.getElementById('searchEngineId').style.transitionDuration = "0.5s";
            document.getElementById("searchEngineId").style.width = "560px";
            document.getElementById('presentationProduct').style.transitionDuration = "0.5s";
            document.getElementById('presentationProduct').style.right = "590px";
            document.getElementById('displaceIcon2').style.transitionDuration = "0.5s";
            document.getElementById('displaceIcon2').style.right = "560px";
        }
    }

